{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "allowSyntheticDefaultImports": true
  },
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "**/types/globals.d.ts",
    "**/*.js",
    "**/*.svelte",
    "**/*.ts"
  ]
}
